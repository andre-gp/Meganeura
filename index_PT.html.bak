function toggleMenu(){
const menuBox = document.getElementById('mobile-menu-container');
const IdiomaBox = document.getElementById('mobile-idioma');

menuBox.classList.remove("loadmenu");
menuBox.classList.add("bigger");
window.toggleMenu = () => {
	
  if (menuBox.classList.contains("smaller")) {
    menuBox.classList.remove("smaller");
    menuBox.classList.add("bigger");
  } 
  else {
			if(IdiomaBox.classList.contains("bigger")){
			IdiomaBox.classList.remove("bigger");
			IdiomaBox.classList.add("smaller");
			} 
  
    menuBox.classList.remove("bigger");
    menuBox.classList.add("smaller");
	
  }
}
}


function toggleIdiMenu(){
const IdimenuBox = document.getElementById('mobile-idioma');

IdimenuBox.classList.remove("loadmenu");
IdimenuBox.classList.add("bigger");

window.toggleIdiMenu = () => {
	
  if (IdimenuBox.classList.contains("smaller")){
    IdimenuBox.classList.remove("smaller");
    IdimenuBox.classList.add("bigger");
	
  } else { 
    IdimenuBox.classList.remove("bigger");
    IdimenuBox.classList.add("smaller");
  }
}
}


function toggleIdi(){
const IdiBox = document.getElementById('idioma');
const seta = document.getElementById('arrow');
window.isSmall = false;
IdiBox.style.display = "flex";
seta.classList.add("fa-caret-up");

window.toggleIdi = () => {
  if (isSmall) {
    IdiBox.classList.remove("smaller");
    IdiBox.classList.add("bigger");
	seta.classList.remove("fa-caret-down");
	seta.classList.add("fa-caret-up");
	
  } else {
    IdiBox.classList.remove("bigger");
    IdiBox.classList.add("smaller");
	seta.classList.remove("fa-caret-up");
	seta.classList.add("fa-caret-down");
	
  }
  isSmall = !isSmall;
}

}


function mouseOver() {
  document.getElementById("gd").style.padding = "10px 0 70px 0";
  document.getElementById("gn").style.transform = "translateY(-1rem)";
  document.getElementById("gn").style.opacity = "1";
  document.getElementById("gn").style.transitionTimingFunction = "ease-out";
}
function mouseOut() {
  document.getElementById("gd").style.padding = "10px 0 10px 0";
  document.getElementById("gn").style.transform = "translateY(-2rem)";
  document.getElementById("gn").style.opacity = "0";
  document.getElementById("gn").style.transitionTimingFunction = "ease";
}




$(document).ready(function() {
    // Checa ao iniciar a página
    checkSize();

    // Testa ao mudar o tamanho da tela
    $(window).resize(checkSize);
});

//Function to the css rule
function checkSize(){
var menu = document.getElementById('menu');
    if ($(".menu").css("display") == "none" && window.innerWidth > 600){
        menu.style.display = "flex";
		location.reload();
    }
	
	if ($(".menu").css("display") == "flex" && window.innerWidth <= 600){
        menu.style.display = "none";
		location.reload();
    }
}

//MODAL GALLERY

function openModal(){
	var menu = document.getElementById('menu');
	var logomenu = document.getElementById('logo');
	document.getElementById("myModal").style.display = "block";
	
	if (document.getElementById("myModal").style.display == "block" && window.innerWidth <= 600){
		logomenu.style.display = "none";
		document.getElementById("myModal").style.marginTop = "0";
		
		if(menu.style.display == "flex"){
		menu.style.display = "none";
		}
	}
}

function closeModal(){
	var logomenu = document.getElementById('logo');
	document.getElementById("myModal").style.display = "none";
	
	if (document.getElementById("myModal").style.display == "none" && window.innerWidth <= 600){
		logomenu.style.display = "flex";
	}
}

var modalIndex = 1;
modalSlides(modalIndex);

// Next/previous controls
function plusModal(n) {
  modalSlides(modalIndex += n);
}

// Thumbnail image controls
function currentModal(n) {
  modalSlides(modalIndex = n);
}

function modalSlides(n){
var i;
var modalS = document.getElementsByClassName("modal-slide-img");

if (n > modalS.length){modalIndex = 1}
if (n < 1) {modalIndex = modalS.length}
for (i = 0; i < modalS.length; i++){
	modalS[i].style.display = "none";
}
modalS[modalIndex-1].style.display = "block";
}

